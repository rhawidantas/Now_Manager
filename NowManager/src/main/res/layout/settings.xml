<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

    <PreferenceCategory android:title="Preferences">


        <CheckBoxPreference
            android:title="Volume Keys"
            android:summary="Use volume up or down to add a log."
            android:key="volumeKeys"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:title="Vibrate On Press"
            android:summary="Vibrate when a new log is added."
            android:key="vibrateOn"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:title="Screen Rotation"
            android:summary="Allow orientation change."
            android:key="screenRotation"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Event Logs">

        <EditTextPreference
            android:title="Default Event Name"
            android:defaultValue=""
            android:key="defaultEventName"
            android:summary="Preset event title for new logs."/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Tally Counter">

        <!--<EditTextPreference
            android:title="Count Interval"
            android:defaultValue="1"
            android:key="countInterval"
            android:summary="Count by a specified integer."
            android:inputType="number"
            android:maxLength="4"/>-->

        <EditTextPreference
            android:title="Count Warning"
            android:defaultValue="0"
            android:key="countWarning"
            android:summary="Display a warning on a number (zero to disable)."
            android:inputType="number"
            android:maxLength="4"/>

    </PreferenceCategory>

</PreferenceScreen>